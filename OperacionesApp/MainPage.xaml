<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:OperacionesApp.View"
            xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
            android:TabbedPage.ToolbarPlacement="Bottom"
            x:Class="OperacionesApp.AppTabbedPage">

    <NavigationPage Title="+" IconImageSource="{StaticResource TabOne}">
        <x:Arguments>
            <local:suma Title="Suma" />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="-" IconImageSource="{StaticResource TabTwo}">
        <x:Arguments>
            <local:RestaPage Title="Resta" />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="*" IconImageSource="{StaticResource TabThree}">
        <x:Arguments>
            <local:MultiplicaciónPage Title="Multiplicacion" />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="/" IconImageSource="{StaticResource TabFour}">
        <x:Arguments>
            <local:DivisiónPage Title="Division" />
        </x:Arguments>
    </NavigationPage>

</TabbedPage>